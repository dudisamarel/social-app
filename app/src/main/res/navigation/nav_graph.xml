<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/feedFragment">
    <fragment
        android:id="@+id/userProfile"
        android:name="com.colman.social_app.fragments.UserProfile"
        android:label="UserProfile" >
        <action
            android:id="@+id/action_userProfile_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.colman.social_app.fragments.feedfragment.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feedFragment_to_userProfile"
            app:destination="@id/userProfile" />
        <action
            android:id="@+id/action_feedFragment_to_addPostFragment"
            app:destination="@id/addPostFragment" />
    </fragment>
    <action android:id="@+id/action_global_feedFragment" app:destination="@id/feedFragment" />
    <action android:id="@+id/action_global_userProfile" app:destination="@id/userProfile" />
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.colman.social_app.AddPostFragment"
        android:label="fragment_add_post"
        tools:layout="@layout/fragment_add_post" />
</navigation>