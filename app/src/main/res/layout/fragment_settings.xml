<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment.SettingsFragment">

    <TextView
        android:id="@+id/settingsPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/stroke"
        android:fontFamily="@font/poppins"
        android:text="@string/settings_page_title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@id/settingsPageTitle"
        app:layout_constraintRight_toRightOf="@id/settingsPageTitle"
        app:layout_constraintTop_toBottomOf="@id/settingsPageTitle"
        android:layout_margin="200dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopof="parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Enable Shaking"
            android:textSize="24dp"
        android:textAlignment="center"
        android:layout_gravity="center"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Enable opening new post\npage on shake"
            android:textSize="16dp"
            android:textAlignment="center"></TextView>

    </LinearLayout>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>
    android:id="@+id/switchMyPosts"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

</androidx.constraintlayout.widget.ConstraintLayout>